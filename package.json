{
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm run dev-renderer",
    "dev-renderer": "webpack-dev-server --config config/webpack.renderer.dev.config.js",
    "dev-main": "webpack --config config/webpack.main.config.js && electron ./dist/main.js",
    "build": "npm run build-main && npm run build-renderer",
    "build-main": "NODE_ENV=production webpack --config config/webpack.main.prod.config.js",
    "build-renderer": "NODE_ENV=production webpack --config config/webpack.renderer.prod.config.js",
    "release-mac": "electron-builder --mac --x64",
    "release-win": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "name": "electron-ts-react-boilerplate",
  "private": true,
  "devDependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "@types/axios": "^0.14.0",
    "@types/lodash.throttle": "^4.1.6",
    "@types/markdown-it": "^10.0.1",
    "@types/node-notifier": "^6.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.0",
    "dotenv": "^8.2.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.6.1",
    "electron-devtools-installer": "^3.0.0",
    "electron-notarize": "^1.0.0",
    "html-webpack-plugin": "^4.3.0",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.21",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@reduxjs/toolkit": "^1.3.5",
    "axios": "^0.19.2",
    "dayjs": "^1.8.25",
    "electron-store": "^5.1.1",
    "lodash.throttle": "^4.1.1",
    "markdown-it": "^10.0.0",
    "promise-status-async": "^1.1.11",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "styled-components": "^5.1.0"
  },
  "build": {
    "appId": "user.app.id",
    "directories": {
      "output": "build"
    },
    "files": [
      "./dist/**/*.js",
      "./app.html",
      "./preference.html",
      "./icon/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "./icon/icon.icns",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "./entitlements.mac.inherit.plist",
      "entitlementsInherit": "./entitlements.mac.inherit.plist"
    },
    "win": {
      "icon": "./icon/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
